<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ResetActivity">

    <TextView android:text = "Reset Password"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/resetText"
        android:textSize = "35sp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <EditText
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:id = "@+id/newPassword"
        android:hint = "Enter New Password"
        android:focusable = "true"
        android:layout_marginTop = "46dp"
        android:layout_alignParentLeft = "true"
        android:layout_alignParentStart = "true"
        android:layout_alignParentRight = "true"
        android:layout_alignParentEnd = "true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reNewPassword"
        android:layout_below="@+id/newPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/newPassword"
        android:layout_alignEnd="@+id/newPassword"
        android:hint="Re Enter New Password" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-150dp"
        android:layout_marginRight="-30dp"
        android:layout_marginBottom="400dp"
        android:layout_toStartOf="@+id/resetText"
        android:layout_toLeftOf="@+id/resetText"
        android:text="Reset" />


</RelativeLayout>